.mat-table {
  width: 100%;
}

.mat-header-cell {
  .mat-sort-header-sorted {
    color: black;
  }
}

.mat-row {
  border-bottom: 0;

  &:hover {
    cursor: pointer;
    background-color: rgba(0, 0, 0, .1);
  }
}

.expandable-row {
  border-bottom: 1px solid rgba(0, 0, 0, .1);
  background-color: #fafafa;
  min-height: 0;
  overflow: hidden;
}
